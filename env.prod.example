# Production Environment Variables for Droplet Deployment

# Django Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=0
ALLOWED_HOSTS=your-droplet-ip,your-domain.com

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/cvdb

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# SendGrid Email Configuration
# Get your API key from https://app.sendgrid.com/settings/api_keys
# Verify your sender at https://app.sendgrid.com/settings/sender_auth/senders
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=your-verified-email@example.com

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Port
PORT=8000
